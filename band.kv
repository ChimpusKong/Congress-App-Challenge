#:kivy 1.11.1

WindowManager:
	Comparison:
	Analysis:
	Tuner:
	Metronome:

<ScreenWrapper>:
	BoxLayout:
		id: wrapper
		orientation: 'vertical'

		BoxLayout:
			id: main
			orientation: 'vertical'

		BoxLayout:
			id: navbar
			orientation: 'horizontal'
			size_hint: 1, .1

			Button:
				id: 0
				text: 'Comparison'
				color: 0, 0, 0, 1
				font_size: 10
				background_color: 1.25, 2.55, 2.38, 1
				on_press: root.manager.current = 'comparison'
			Button:
				id: 1
				text: 'Analysis'
				color: 0, 0, 0, 1
				font_size: 10
				background_color: 1.25, 2.55, 2.38, 1
				on_press: root.manager.current = 'analysis'
			Button:
				id: 2
				text: 'Tuner'
				color: 0, 0, 0, 1
				font_size: 10
				background_color: 1.25, 2.55, 2.38, 1
				on_press: root.manager.current = 'tuner'
			Button:
				id: 3
				text: 'Met.'
				color: 0, 0, 0, 1
				font_size: 10
				background_color: 1.25, 2.55, 2.38, 1
				on_press: root.manager.current = 'metronome'

<Comparison>:
	name: 'comparison'
	
	FloatLayout:

		Label:
			text: 'Enter Sample 1'
			pos_hint: {'center_x': .5, 'center_y': .8}
			
		TextInput: 
			id: compinput1
			hint_text: 'Sample 1'
			pos_hint: {'center_x': .5, 'center_y': .75}
			size_hint: .25, .05

		Label:
			text: 'Enter Sample 2'
			pos_hint: {'center_x': .5, 'center_y': .7}

		TextInput: 
			id: compinput2
			hint_text: 'Sample 2'
			pos_hint: {'center_x': .5, 'center_y': .65}
			size_hint: .25, .05

		Button:
			id: compbutton
			text: "Compare"
			size_hint: .25, .1
			pos_hint: {'center_x': .5, 'center_y': .4}
			on_press: root.get_pitches(compinput1.text, compinput2.text)

<Analysis>:
	name: 'analysis'
	
	FloatLayout:

		Label:
			text: 'Enter the Filename'
			pos_hint: {'center_x': .5, 'center_y': .75}

		TextInput: 
			id: analinput
			hint_text: 'Sample'
			pos_hint: {'center_x': .5, 'center_y': .7}
			size_hint: .25, .05

		Button:
			id: analbutton
			text: "Analyize"
			size_hint: .25, .1
			pos_hint: {'center_x': .5, 'center_y': .4}
			on_press: root.get_pitch(analinput.text)

		ToggleButton:
			id: recordanal
			text: "Record"
			size_hint: .25, .1
			pos_hint: {'center_x': .5, 'center_y': .3}
			on_press: root.record_init(self.state)

<Tuner>:
	name: 'tuner'

	FloatLayout:

		Label:
			text: 'Tuner Screen'
			pos_hint: {'center_x': .5, 'center_y': .5}

<Metronome>:
	name: 'metronome'

	FloatLayout:

		Label:
			text: 'Enter the BPM'
			pos_hint: {'center_x': .5, 'center_y': .75}

		ToggleButton:
			id: mettoggle
			text: 'ON' if self.state == 'down' else 'OFF'
			size_hint: .25, .1
			pos_hint: {'center_x': .5, 'center_y': .4}
			on_press: root.met(self.state, metinput.text)

		TextInput: 
			id: metinput
			hint_text: 'BPM'
			pos_hint: {'center_x': .5, 'center_y': .7}
			size_hint: .25, .05
		


